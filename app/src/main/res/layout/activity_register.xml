<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  STUDENT REGISTER"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp"
        tools:ignore="MissingConstraints" />



    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_background"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvname"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PERSONAL DETAILS"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/etname"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint=" Name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv2" />

            <EditText
                android:id="@+id/etusn"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="USN"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etname" />

            <EditText
                android:id="@+id/etbatch"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Batch"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etusn" />

            <EditText
                android:id="@+id/etemail"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint=" Email"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etbatch" />

            <EditText
                android:id="@+id/etphone"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Phone Number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etemail" />

            <EditText
                android:id="@+id/etgender"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Gender"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etphone" />

            <EditText
                android:id="@+id/etdob"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="DOB"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etgender" />


            <EditText
                android:id="@+id/etpassword"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etdob" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PREVIOUS ACADEMIC DETAILS"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpassword" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="10TH STANDARD"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv3" />

            <EditText
                android:id="@+id/etsslcyop"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Year Of Passing"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv4" />

            <EditText
                android:id="@+id/etsslcpercent"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Percentage"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etsslcyop" />

            <EditText
                android:id="@+id/etsslcschool"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="School"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etsslcpercent" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="12TH STANDARD"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etsslcschool" />

            <EditText
                android:id="@+id/etpuyop"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Year Of Passing"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv5" />

            <EditText
                android:id="@+id/etpupercent"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Percentage/CGPA"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpuyop" />

            <EditText
                android:id="@+id/etpuclg"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="College"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpupercent" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="UNDER GRADUATION"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etpuclg" />

            <EditText
                android:id="@+id/etUgdegree"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Degree"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv6" />

            <EditText
                android:id="@+id/etUgcombination"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Combination"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etUgdegree" />

            <EditText
                android:id="@+id/etUgcgpa"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="CGPA"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etUgcombination" />

            <EditText
                android:id="@+id/etUgYop"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Year Of Passing"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etUgcgpa" />

            <EditText
                android:id="@+id/etUgClg"
                android:layout_width="338dp"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="College"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etUgYop" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnregister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>